<!DOCTYPE html>
<html lang="en">
<!-- Include Head -->
<%- include('partials/head', {title: 'Productos'}) %>

<body>
	<!-- ID Main container es el que contiene toooooodo -->
	<div class="container-fluid" id="main-container">
		<!-- Header -->
		<%- include('partials/header') %>
		<!-- Row para el titulo de tu carrito -->
		<div class="row titulo-seccion justify-content-center">
			<h1>Tu Carrito</h1>
		</div>
	<div class="row">
		<div class="col-12">
			<% if(products.length < 1){ %>
				
						</tbody>
					</table>
					<div class="text-center f-18">
						<h4>Esta vacio!!!</h4>
						<div><img class="bg-ye mb-2"src="../../images/empty-cart.png" alt="" width="450px" style="border-radius: 300px;"></div>
						
					</div>
			<% } else { %> 
	<div class="table-responsive-sm">
		<table class="table table-striped table-dark">
			<thead>
				<tr>
					<th >Imagen</th>
					<th >Nombre</th>
					<th>Precio</th>
					<th >Cantidad</th>
					<th >Eliminar</th>
				</tr>
			</thead>
			<tbody>
				<% products.forEach (oneProduct => { %>
				<tr>
					<td><a href="/productos/detalle/<%= oneProduct.id  %>"><img src="../../images/productos/<%= oneProduct.image %>" width="100px" class="img-thumbnail"></a>
					</td>
					
					<td><a href="/productos/detalle/<%= oneProduct.id  %>"><%= oneProduct.name  %></a></td>
					<td><%= oneProduct.price %></td>
					<td><input type="number" value="1" class="form-control-sm"></td>
					<td>
						<form action="/pepinito" method="POST">
							<input type="hidden" name="product_id" value="<%= oneProduct.id  %>">
							<button type="submit"class="btn-amarillo">Eliminar</button>
						</form>
					</td>
				</tr>
				<% })%>
			<% }%>
			</tbody>
		</table>

		<div class="row d-flex justify-content-center my-3">
			<div class="col-12 col-md-4 text-center btn-amarillo py-2">
				<a href="/productos" class="text-black f-18">Agrega mas productos!</a>
			</div>
		</div>

		</div>
	</div>
	</div>
		<!-- Row para listar los articulos del carrito -->
	
		<!-- Footer -->
		<%- include('partials/footer') %>
		<!-- ↓↓ aca termina el DIV main container ↓↓ -->
	</div>

</body>

</html>